<Window x:Class="Authorization30._10Rodina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization30._10Rodina"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition/>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" FontSize="36">Здравствуйте,<LineBreak/> выберите, что вы хотите сделать:</TextBlock>
        <Button x:Name="LogInBtn" Grid.Column="1" Grid.Row="3" FontSize="36" Click="LogInBtn_Click">Войти</Button>
        <Button x:Name="RegistrationBtn" Grid.Column="1" Grid.Row="5" FontSize="36" Click="RegistrationBtn_Click">Зарегистрироваться</Button>
    </Grid>
</Window>
